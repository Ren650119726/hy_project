<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--
  - @author dong
  - @author edgar.zr
 -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} [%-5p] %c{1}:%L --- %m%n"/>
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%-5p](%C{2},%l) - %m%n"/>--><!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p: %m%n"/>--><!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p] [%t] (%c:%L) - %m%n"/>-->
        </layout>
    </appender>

    <appender name="ROOT" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/data/log/virtualwealthcenter/root.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{requestURIWithQueryString}] %-5p %c{2} %l - %m%n"/>-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\}] [%-5p] %c:%L --- %m%n"/>
        </layout>
    </appender>

    <appender name="PROJECT" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/data/log/virtualwealthcenter/service.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{requestURIWithQueryString}] %-5p %c{2} %l - %m%n"/>-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\}] [%-5p] %c:%L --- %m%n"/>
        </layout>
    </appender>

    <appender name="DAO" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/data/log/virtualwealthcenter/dao.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{requestURIWithQueryString}] %-5p %c{2} %l - %m%n"/>-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\}] [%-5p] %c:%L --- %m%n"/>
        </layout>
    </appender>
    <appender name="access-appender" class="org.apache.log4j.DailyRollingFileAppender">
        <errorHandler class="org.apache.log4j.helpers.OnlyOnceErrorHandler"/>
        <param name="File" value="/data/log/virtualwealthcenter/access.log"/>
        <param name="Encoding" value="UTF-8" />
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="perfLog-appender" class="org.apache.log4j.DailyRollingFileAppender">
        <errorHandler class="org.apache.log4j.helpers.OnlyOnceErrorHandler"/>
        <param name="File" value="/data/log/virtualwealthcenter/perf-monitor.log"/>
        <param name="Encoding" value="UTF-8" />
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%c] %m%n"/>
        </layout>
    </appender>


    <logger name="com.mockuai.virtualwealthcenter.core" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="PROJECT"/>
    </logger>

    <logger name="com.ibatis" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAO"/>
    </logger>

    <logger name="java.sql" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAO"/>
    </logger>

    <logger name="org.apache" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="org.springframework" additivity="false">
        <!--<level value="ERROR"/>-->
        <level value="ERROR"/>
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="org.apache.zookeeper" additivity="false">
        <level value="ERROR"/>
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.alibaba.dubbo.rpc" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.alibaba.dubbo.registry" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="ROOT"/>
    </logger>
    <logger name="accessLogger" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="access-appender"/>
    </logger>
    <logger name="perfLogger" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="perfLog-appender"/>
    </logger>

    <root>
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROOT"/>
        <appender-ref ref="PROJECT"/>
    </root>

</log4j:configuration>