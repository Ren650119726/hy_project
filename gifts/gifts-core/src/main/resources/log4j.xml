<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--
  - @author edgar.zr
 -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} [%-5p] %c{1} --- %m%n"/>
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%-5p](%C{2},%l) - %m%n"/>--><!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p: %m%n"/>--><!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p] [%t] (%c:%L) - %m%n"/>-->
        </layout>
    </appender>

    <appender name="ROOT" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/data/log/giftscenter/root.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{requestURIWithQueryString}] %-5p %c{2} %l - %m%n"/>-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\}] [%-5p] %c --- %m%n"/>
        </layout>
    </appender>

    <appender name="PROJECT" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/data/log/giftscenter/service.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{requestURIWithQueryString}] %-5p %c{2} %l - %m%n"/>-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\}] [%-5p] %c--- %m%n"/>
        </layout>
    </appender>

    <appender name="DAO" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/data/log/giftscenter/dao.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{requestURIWithQueryString}] %-5p %c{2} %l - %m%n"/>-->
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\}] [%-5p] %c --- %m%n"/>
        </layout>
    </appender>

    <logger name="com.mockuai.giftscenter.core" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="PROJECT"/>
    </logger>

    <logger name="com.ibatis" additivity="false">
        <!--<level value="INFO"/>-->
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAO"/>
    </logger>

    <logger name="java.sql" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAO"/>
    </logger>

    <logger name="org.apache" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="org.springframework" additivity="false">
        <!--<level value="INFO"/>-->
        <level value="ERROR"/>
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="org.apache.zookeeper" additivity="false">
        <level value="INFO"/>
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.alibaba.dubbo.rpc" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROOT"/>
    </root>

</log4j:configuration>