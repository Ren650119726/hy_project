<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans    
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd    
            http://www.springframework.org/schema/context    
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="com.mockuai.mainweb.core.service" />

    <bean id="actionHolder" class="com.mockuai.mainweb.core.service.action.ActionHolder"/>

    <bean id="appContext" class="com.mockuai.mainweb.core.service.AppContext"/>

    <bean id="requestDispatcher" class="com.mockuai.mainweb.core.service.RequestDispatcher">
        <property name="actionHolder" ref="actionHolder"/>
        <property name="appContext" ref="appContext"/>
    </bean>

    <bean id="applicationAware" class="com.mockuai.mainweb.core.util.ApplicationAware"/>

</beans>
